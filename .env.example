# RaspTerminal Configuration

# Server
PORT=3002
NODE_ENV=production

# Authentication
ACCESS_PASSWORD=your-secure-password-here
JWT_SECRET=your-jwt-secret-key-change-this-in-production

# JWT token expiration (in seconds) - default 24 hours
JWT_EXPIRATION=86400

# Rate limiting
LOGIN_RATE_LIMIT_WINDOW_MS=900000
LOGIN_RATE_LIMIT_MAX=5

# Stats collection interval (ms) - default 5 seconds
STATS_INTERVAL=5000

# Stats history retention (days)
STATS_RETENTION_DAYS=30

# Terminal settings
TERMINAL_SHELL=/bin/bash

# Client URL (for CORS)
CLIENT_URL=http://localhost:5173

# Production domain
DOMAIN=terminal.devbyle.co
